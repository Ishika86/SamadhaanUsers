<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchUAIDActivity">

    <RelativeLayout
        android:id="@+id/rel5"
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <EditText
            android:id="@+id/search_uaid_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:hint="Enter UAID"
            android:textColorHint="@color/colorPrimary"
            android:textSize="18sp"
            android:background="@android:color/white"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:layout_centerVertical="true"
            />
        <Button
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="4dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:background="@color/colorPrimary"
            android:layout_toRightOf="@id/search_uaid_name"/>
    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_below="@id/rel5"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:elevation="8dp"
        android:layout_marginTop="46dp"
        android:layout_height="wrap_content"
        android:id="@+id/card">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/uaid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:padding="8dp"
                tools:text="UAID"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/udhyogName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:text="Udhyog name:"
                    android:textAlignment="viewStart"
                    android:background="@android:color/white"/>
                <TextView
                    android:id="@+id/udhyogNameValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="8dp"
                    tools:text="12520"
                    android:textAlignment="viewEnd"
                    android:background="@android:color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:text="Name:"
                    android:textAlignment="viewStart"
                    android:background="@android:color/white"/>
                <TextView
                    android:id="@+id/NameValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="8dp"
                    tools:text="12520"
                    android:textAlignment="viewEnd"
                    android:background="@android:color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/udhyogDistrict"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:text="District:"
                    android:textAlignment="viewStart"
                    android:background="@android:color/white"/>
                <TextView
                    android:id="@+id/udhyogDistrictValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="8dp"
                    tools:text="12520"
                    android:textAlignment="viewEnd"
                    android:background="@android:color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/udhyogState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:text="State:"
                    android:textAlignment="viewStart"
                    android:background="@android:color/white"/>
                <TextView
                    android:id="@+id/udhyogStateValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="8dp"
                    tools:text="12520"
                    android:textAlignment="viewEnd"
                    android:background="@android:color/white"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>