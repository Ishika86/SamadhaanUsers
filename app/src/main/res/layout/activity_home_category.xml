<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeCategoryActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_margin="12dp"
        android:elevation="8dp"
        android:layout_height="0dp"
        android:id="@+id/central">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="32sp"
                android:padding="8dp"
                android:text="@string/central_ministry"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/central_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="8dp"
                    tools:text="Application filed:"
                    android:textAlignment="viewStart"
                    android:background="@android:color/white"/>
                <TextView
                    android:id="@+id/central_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="8dp"
                    tools:text="12520"
                    android:textAlignment="viewEnd"
                    android:background="@android:color/white"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="12dp"
        android:elevation="8dp"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:id="@+id/state">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="32sp"
                android:padding="8dp"
                android:text="@string/state_ministry"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/state_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="8dp"
                    tools:text="Application filed:"
                    android:textAlignment="viewStart"
                    android:background="@android:color/white"/>
                <TextView
                    android:id="@+id/state_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="8dp"
                    tools:text="12520"
                    android:textAlignment="viewEnd"
                    android:background="@android:color/white"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="12dp"
        android:elevation="8dp"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:id="@+id/others">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="32sp"
                android:padding="8dp"
                android:text="Others"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/other_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:padding="8dp"
                    tools:text="Application filed:"
                    android:textAlignment="viewStart"
                    android:background="@android:color/white"/>
                <TextView
                    android:id="@+id/other_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:padding="8dp"
                    tools:text="12520"
                    android:textAlignment="viewEnd"
                    android:background="@android:color/white"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>